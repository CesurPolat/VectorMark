{
  "manifest_version": 3,
  "name": "VectorMark",
  "version": "0.1",
  "description": "VectorMark â€” Smart bookmark manager that automatically categorizes and organizes your saved websites.",
  "icons": {
    "16": "icons/VectorMarkIcon_16.png",
    "48": "icons/VectorMarkIcon_48.png",
    "128": "icons/VectorMarkIcon_128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Click to open panel"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "content_security_policy": {
   "extension_pages":"script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "host_permissions": ["<all_urls>"],
  "background": {"service_worker": "background.js"},
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "bookmarks",
    "sidePanel",
    "webNavigation"
  ]
}